<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/chk_announcement_list_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_announcement_content"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/title_announcement_content"
        android:textColor="#191970"
        android:textSize="20sp" />

    <!-- TextView
        android:id="@+id/tv_announcement_author"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:paddingLeft="6dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/title_announcement_author"
        android:textColor="#191970"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_announcement_time"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:paddingLeft="6dp"
        android:gravity="center"
        android:text="@string/title_announcement_time"
        android:textColor="#191970"
        android:textSize="24sp" /-->

</LinearLayout>