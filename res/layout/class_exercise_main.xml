<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_class"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1.2"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp" >

        <Spinner
            android:id="@+id/spn_order"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:textColor="#000080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spn_cur_class"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown"
            android:textColor="#000080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_show_class_cur_motion"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/show_class_cur_motion"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:layout_weight="15"
        android:background="@drawable/bg_round_white"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/gv_student_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="120dp"
            android:gravity="center"
            android:horizontalSpacing="24dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />
    </LinearLayout>

</LinearLayout>